<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--place 타이틀 & 뷰-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_scheduledetailsAdapter_show_title"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="타이틀"
                    android:gravity="left|center"
                    android:paddingLeft="20dp"/>
            </LinearLayout>
            <!--지역 이름-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_scheduledetailsAdapter_show_cat1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="카테고리1"
                    android:gravity="left|center"
                    android:paddingLeft="20dp"/>

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textStyle="bold"
                    android:text=">"
                    android:gravity="left|center"
                    android:paddingLeft="20dp"/>


                <TextView
                    android:id="@+id/tv_scheduledetailsAdapter_show_cat2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="카테고리1"
                    android:gravity="left|center"
                    android:paddingLeft="20dp"/>

                <TextView
                    android:id="@+id/tv_scheduledetailsAdapter_show_district"
                    android:layout_width="0px"
                    android:layout_height="35dp"
                    android:layout_weight="4"
                    android:textStyle="bold"
                    android:text="지역"
                    android:gravity="left|center"
                    android:paddingLeft="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>