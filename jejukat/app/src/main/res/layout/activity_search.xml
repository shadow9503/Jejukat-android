<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_main_left"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:openDrawer="start"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_main_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="검색: 성산일출봉"
                android:singleLine="true"
                android:visibility="visible"/>
           <LinearLayout
               android:id="@+id/layout_show_sort"
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:gravity="center"
               android:background="#E8E8E8">
               <ImageView
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_marginRight="20dp"
                   android:background="@drawable/icon_sort"/>
           </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_sort_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:id="@+id/layout_cat1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_cat1_1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="일정"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"
                        android:background="#B3E7FF"/>
                    <Button
                        android:id="@+id/btn_cat1_2"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="관광"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"
                        android:background="#B3E7FF"/>
                    <Button
                        android:id="@+id/btn_cat1_3"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="맛집"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"
                        android:background="#B3E7FF"/>
                    <Button
                        android:id="@+id/btn_cat1_4"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="숙소"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"
                        android:background="#B3E7FF"/>
                    <Button
                        android:id="@+id/btn_cat1_5"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="카페"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"
                        android:background="#B3E7FF"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_cat2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <Button
                        android:id="@+id/btn_order_view"
                        android:layout_margin="5dp"
                        android:layout_width= "60dp"
                        android:layout_height= "match_parent"
                        android:textSize="15dp"
                        android:background="#ffffff"
                        android:text="조회순"/>
                    <Button
                        android:id="@+id/btn_order_name"
                        android:layout_margin="5dp"
                        android:layout_width= "60dp"
                        android:layout_height= "match_parent"
                        android:textSize="15dp"
                        android:background="#ffffff"
                        android:text="이름순"/>
                    <Button
                        android:id="@+id/btn_order_latest"
                        android:layout_margin="5dp"
                        android:layout_width= "60dp"
                        android:layout_height= "match_parent"
                        android:textSize="15dp"
                        android:background="#ffffff"
                        android:text="최신순"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"/>
</androidx.drawerlayout.widget.DrawerLayout>
