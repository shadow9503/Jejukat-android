<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_scheduledetails_fragcomment_profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="7dp" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_scheduledetails_fragcomment_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:paddingRight="7dp"
                android:text="닉네임"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_scheduledetails_fragcomment_insertdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="등록시간" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

<!-- seq_user 동일할때만 삭제 버튼 보이게하기 -->
            <TextView
                android:id="@+id/tv_scheduledetails_fragcomment_delete_comment"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:text="X"
                android:textSize="20dp"
                android:visibility="gone"/>


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_scheduledetails_fragcomment_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"/>


</LinearLayout>