<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <!--지도 Mapview-->
    <com.google.android.gms.maps.MapView
        android:id="@+id/map_detailpost"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />


<!--주소,연락처,홈페이지-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="주소"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_detailsPost_frag_map_basicinfo_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="주소나와라나와라나와라나와라나와라나와라"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="연락처 "
                />

            <TextView
                android:id="@+id/tv_detailsPost_frag_map_basicinfo_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:text="연락처 나와라나와라나와라나와라나와라나와라"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="홈페이지 "
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_detailsPost_frag_map_basicinfo_homepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="홈페이지 나와라나와라나와라나와라나와라나와라"
                android:textSize="18dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</androidx.core.widget.NestedScrollView>
